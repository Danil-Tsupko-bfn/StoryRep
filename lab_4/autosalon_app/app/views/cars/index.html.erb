<h1 class="text-center mb-4">Cars List</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Model</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.brand %></td>
        <td><%= car.model %></td>
        <td>
          <%= link_to 'Show', car, class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_car_path(car), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', car, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Car', new_car_path, class: 'btn btn-primary' %>
